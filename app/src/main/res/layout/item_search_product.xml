<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:padding="6dp"
        android:layout_height="wrap_content">
        <com.dressing.dressingproject.ui.widget.SquareImageView
            android:layout_width="110dp"
            android:scaleType="fitCenter"
            android:layout_height="wrap_content"
            android:id="@+id/item_search_product_img"/>
        <com.pnikosis.materialishprogress.ProgressWheel
            android:id="@+id/progress_wheel"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            wheel:matProg_barColor="@color/main_blue"
            wheel:matProg_progressIndeterminate="true" />
    </FrameLayout>


    <LinearLayout
        android:layout_width="130dp"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_height="match_parent">

        <com.dressing.dressingproject.ui.widget.NotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_search_product_name_text"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textSize="18sp"
            android:paddingTop="5dp"
            android:paddingBottom="12dp"/>

        <com.dressing.dressingproject.ui.widget.NotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:textSize="15sp"
            android:id="@+id/item_search_product_price_text"/>
        <com.dressing.dressingproject.ui.widget.NotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:textSize="15sp"
            android:id="@+id/item_search_product_num_text"/>
        <com.dressing.dressingproject.ui.widget.NotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:textSize="15sp"
            android:id="@+id/item_search_product_location_text"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_marginRight="0dp"
        android:layout_marginTop="13dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.dressing.dressingproject.ui.widget.SquareImageView
            android:id="@+id/item_search_product_favorite"
            android:src="@drawable/favorite_button"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="3dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"/>
        <com.dressing.dressingproject.ui.widget.SquareImageView
            android:id="@+id/item_search_product_map"
            android:layout_width="35dp"
            android:src="@drawable/ic_location"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            />

        <ImageView
            android:id="@+id/item_search_product_logo"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:scaleType="fitEnd"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="17dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"/>


    </RelativeLayout>

</LinearLayout>