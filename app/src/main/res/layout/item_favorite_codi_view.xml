<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.dressing.dressingproject.ui.widget.RectangleImageView
            android:id="@+id/item_favorite_codi_view_img"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.dressing.dressingproject.ui.widget.RectangleImageView>
        <com.pnikosis.materialishprogress.ProgressWheel
            android:id="@+id/progress_wheel"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            wheel:matProg_barColor="@color/main_blue"
            wheel:matProg_progressIndeterminate="true" />
    </FrameLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:id="@+id/item_store_location_check_img"/>

    <ImageView
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="11dp"
        android:visibility="gone"
        android:src="@drawable/ic_check"
        android:id="@+id/item_store_location_check_arrow_img"
        />

</RelativeLayout>