<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="14dp"
        android:orientation="horizontal">

        <com.dressing.dressingproject.ui.widget.NotoTextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="18dp"
            android:textSize="20sp"
            android:textColor="@color/black_gray"
            android:id="@+id/nav_user_nick"
            android:text="땡땡땡님 취향분석"/>

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/nav_content_setting_btn"
            android:src="@drawable/ic_cogwheels"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <com.dressing.dressingproject.ui.widget.NotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_blue"
            android:textSize="20sp"
            android:text="댄디한 스타일을 선호하는 초식남"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="15dp">

        <com.github.mikephil.charting.charts.RadarChart
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/chart_user_img"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginBottom="18dp"
        android:orientation="vertical"
        android:layout_marginTop="0dp">

        <com.dressing.dressingproject.ui.widget.NotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_gravity="left"
            android:textSize="16sp"
            android:textColor="@color/black_gray"
            android:text="#선호 키워드"/>


        <RelativeLayout
            android:layout_width="176dp"
            android:layout_height="171dp">


            <com.dressing.dressingproject.ui.widget.NotoTextView
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:id="@+id/keyword1"
                android:gravity="center"
                android:text="keyword1"
                android:layout_centerInParent="true"
                android:background="@drawable/keyword1"/>

            <com.dressing.dressingproject.ui.widget.NotoTextView
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_alignParentLeft="true"
                android:textSize="10sp"
                android:textColor="#ffffff"
                android:id="@+id/keyword2"
                android:text="keyword2"
                android:gravity="center"
                android:layout_marginTop="78dp"
                android:background="@drawable/keyword2"/>

            <com.dressing.dressingproject.ui.widget.NotoTextView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_alignParentRight="true"
                android:textSize="10sp"
                android:textColor="#ffffff"
                android:id="@+id/keyword3"
                android:text="keyword3"
                android:gravity="center"
                android:layout_marginTop="53dp"
                android:background="@drawable/keyword3"/>

            <com.dressing.dressingproject.ui.widget.NotoTextView
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_alignParentTop="true"
                android:textSize="8sp"
                android:textColor="#ffffff"
                android:id="@+id/keyword4"
                android:text="keyword4"
                android:gravity="center"
                android:layout_marginLeft="59dp"
                android:background="@drawable/keyword4"/>

            <com.dressing.dressingproject.ui.widget.NotoTextView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:textSize="6sp"
                android:textColor="#ffffff"
                android:id="@+id/keyword5"
                android:text="keyword5"
                android:gravity="center"
                android:layout_marginTop="110dp"
                android:layout_marginLeft="135dp"
                android:background="@drawable/keyword5"/>

            <com.dressing.dressingproject.ui.widget.NotoTextView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:textSize="6sp"
                android:textColor="#ffffff"
                android:id="@+id/keyword6"
                android:text="keyword6"
                android:gravity="center"
                android:layout_marginTop="135dp"
                android:layout_marginLeft="43dp"
                android:background="@drawable/keyword6"/>

        </RelativeLayout>

    </LinearLayout>


    <Button
        android:layout_width="222dp"
        android:layout_height="34dp"
        android:layout_marginBottom="5dp"
        android:background="@color/main_blue"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:id="@+id/nav_content_style_analysis_btn"
        android:text="스타일 평가"/>



</LinearLayout>
