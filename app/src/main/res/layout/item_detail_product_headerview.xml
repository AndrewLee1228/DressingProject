<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="#ffffff"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/item_detail_product_headerview_text"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/item_detail_product_headerview_productname_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/item_detail_product_headerview_productprice_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/item_detail_product_headerview_productbrand_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/item_detail_product_headerview_productnum_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@android:color/black"/>


    </LinearLayout>

    <com.dressing.dressingproject.ui.widget.SquareImageView
        android:id="@+id/item_detail_product_headerview_favorite"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:src="@drawable/favorite_button"
        />

</LinearLayout>