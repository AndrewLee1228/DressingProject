<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Fullscreen application theme. -->
    <style name="FullscreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
    </style>



    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--LoginMainFragment 버튼 간격 스타일-->
    <style name="loginMainButton">
        <item name="android:layout_marginBottom">18dp</item>
        <item name="android:layout_marginRight">86dp</item>
        <item name="android:layout_marginLeft">86dp</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--MainActivity-->
    <style name="bottom_layout_item_text">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_gravity">center|bottom</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="bottom_layout_item_img">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <!--Bottom Sheet-->
    <style name="bottom_sheet_style">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="signup_auto_textsize">
        <item name="android:textSize">15sp</item>
    </style>

    <!--Fragment signup-->
    <style name="fragment_signup_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_gray</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#ffc107</item>
        <item name="colorControlActivated">@color/main_blue</item>
    </style>

    <!--소셜로그인 다이얼로그 테마-->
    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:background">@color/main_blue</item>
    </style>

</resources>
